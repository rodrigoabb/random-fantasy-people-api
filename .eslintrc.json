{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-prototype-builtins": "off",
        "eqeqeq": "off",
        "max-len": "off",
        "new-cap": "off",
        "implicit-arrow-linebreak": "off",
        "no-use-before-define": "off"
    },
    "overrides": [
        {
          "files": ["*test.js","*.spec.js"],
          "rules": {
            "no-unused-expressions": "off",
            "arrow-body-style": "off"
          }
        }
      ]
}